<% unless @use_cases.count.positive? %>
  <div class="Vlt-callout Vlt-callout--warning">
    <i></i>
    <div class="Vlt-callout__content">
      No use cases available in this language
    </div>
  </div>
  <% else %>
<div class="masonry">
  <% @use_cases.each_with_index do |use_case, index| %>
    <div class="item">
      <div class="Vlt-card Vlt-card--image Nxd-card--tutorials">
        <div class="Vlt-card__image Vlt-card__image--tech Vlt-card__image--blue">
          <a href="/<%= use_case.products.join("") %>/use-cases/<%= @language %>" class="Vlt-badge Vlt-badge--large Nxd-tutorials__product Nxd-tutorials__product--<%= use_case.subtitle %>"><%= use_case.subtitle %></a>
        </div>

        <a href="<%= use_case.path %>">
          <div class="Vlt-card__content">
            <h2>
              <span><%= use_case.title %></span>
            </h2>
            <p><%= use_case.description %></p>
        </a>

        <% if use_case.languages.count > 0 %>
          <% use_case.languages.each do |language| %>
            <a href="<%= "#{@base_path}/#{language.downcase}" %>"><small class="Vlt-grey-darker Nxd-tutorials__language Nxd-tutorials__language--<%= language %>"><span>‚óè</span> <%= language == "Objective_C" ? "Objective-C" : language %></small></a>
            <% end %>
          <% end %>

          <div class="Vlt-card__cta">
            <a href="<%= use_case.path %>" class="Vlt-btn Vlt-btn--secondary">
            Read more
            </a>
          </div>
        </div>
    </div>
    </div>
  <% end %>
</div>
<% end %>
